<% content_for :body_content_title do %>
  <%= @client.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @client.name %>
    </p>
  </section>
  <section>
    <h1>Lastname</h1>
    <p>
      <%=raw @client.lastname %>
    </p>
  </section>
  <section>
    <h1>Username</h1>
    <p>
      <%=raw @client.username %>
    </p>
  </section>
  <section>
    <h1>Password</h1>
    <p>
      <%=raw @client.password %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @client.email %>
    </p>
  </section>
  <section>
    <h1>Level</h1>
    <p>
      <%=raw @client.level %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="clients">
      <% @clients.each do |client| %>
        <li>
          <%= link_to client.name, client_path(client) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
