<ul>
  <% if Admin::ClientsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_clients_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_client_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::ClientsController.sortable? and Client.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Clients"),
                 admin_clients_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Clients"),
                 admin_clients_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>